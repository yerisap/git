<mvc:View controllerName="sync.e08.exercise13.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <!-- 모바일   : 접을 수 있고, 접혀있는 상태로 출력 -->
            <!-- 데스크탑 : 접을 수 없고, 펼쳐있는 상태로 출력 -->
            <!-- device 모델의 /system/desktop 경로에는 
                데스크탑으로 웹페이지를 접근하면 true로 기록되어 있다.
                아래와 같은 설정의 경우 데스크탑으로 접속하면
                expandable은 true의 반대인 false 가 전달되고, ( 접을 수 없음 )
                expanded 는 true로 전달된다. ( 펼쳐져 있다 )
                
                데스크탑이 아닌 경우라면 ?? /system/desktop 은 false 가 된다.
                expandable 은 false 의 반대인 true 가 전달되고, ( 접을 수가 있다 )
                expanded 는 false 가 전달된다. ( 접혀있다 )
            -->
            <Panel headerText="Flights" 
                   expandable="{=!${device>/system/desktop} }" 
                   expanded="{device>/system/desktop}" >
                <content>
                    <Table id="idTable"
                        items="{/FlightSet}" >

                        <columns>
                            <Column ><Label text="Carrier"/></Column>
                            <Column ><Label text="Connection"/></Column>
                            <Column ><Label text="Flight Date"/></Column>
                            <Column ><Label text="Price"/></Column>
                            <Column ><Label text="Availability"/></Column>
                            <Column ><Label text="Free Seats"/></Column>
                        </columns>

                        <ColumnListItem >
                            <ObjectIdentifier  title="{Carrid}"/>
                            <ObjectIdentifier  title="{Connid}"/>
                            <ObjectIdentifier  title="{
                                path: 'Fldate',
                                type: 'sap.ui.model.type.Date',
                                formatOptions: {
                                    pattern: 'yyyy-MM-dd'
                                    }
                                }"/>
                            <ObjectNumber 
                                number="{
                                    parts:[{path:'Price'}, {path:'Currency'}],
                                    type: 'sap.ui.model.type.Currency',
                                    formatOptions: {
                                        showMeasure: false
                                    }
                                }" 
                                unit="{Currency}" />
                            <CheckBox select=""/>
                            <Text text=""/>
                        </ColumnListItem>

                    </Table>
                </content>
            </Panel>
        </content>
    </Page>
</mvc:View>
