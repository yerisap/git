<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
>
    
    <Dialog id="idNewDialog" title="신규 항공사 정보"
        contentWidth="400px">
        <content>
            <f:SimpleForm layout="ResponsiveGridLayout"
                labelSpanS="4" >
                
                <Label text="{i18n>labelCarrid}"/>
                <Input value="{new>/Carrid}" maxLength="3" required="true">
                    <layoutData>
                        <l:GridData  span="S3" />
                    </layoutData>
                </Input>

                <Label text="{i18n>labelCarrname}"/>
                <Input value="{new>/Carrname}"/>

                <Label text="{i18n>labelCurrcode}"/>
                <ComboBox 
                    id="idComboBox" 
                    items="{view>/Currency}" 
                    selectionChange="onCurrencyChange">
                    
                    <items>
                        <c:Item key="{view>key}" text="{view>name}" />
                    </items>
                    <layoutData>
                        <l:GridData span="S3" />
                    </layoutData>
                </ComboBox>

                <Label text="{i18n>labelUrl}"/>
                <Input value="{new>/Url}"/>

            </f:SimpleForm>
        </content>
        
        <buttons>
            <Button text="저장" press="onSaveConfirm" type="Accept" />
            <Button text="취소" press="onSaveCancel"  type="Reject" />
        </buttons>
        
    </Dialog>

</c:FragmentDefinition>